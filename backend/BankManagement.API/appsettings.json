{
  "ConnectionStrings": {
    "DefaultConnection": "Server=bank-sqlserver;Database=BankManagementDB;User Id=sa;Password=YourStrong!Passw0rd;TrustServerCertificate=true;MultipleActiveResultSets=true"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/bank-management-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "BankSettings": {
    "MaxDailyWithdrawalLimit": 50000.00,
    "MaxDailyTransferLimit": 100000.00,
    "MinimumAccountBalance": 0.00,
    "DefaultCurrency": "SAR",
    "TransactionFees": {
      "WithdrawalFee": 5.00,
      "TransferFee": 2.00,
      "InternationalTransferFee": 25.00
    },
    "AccountTypes": [
      "Savings",
      "Checking",
      "Business"
    ],
    "SupportedLanguages": [
      "ar",
      "en"
    ]
  },
  "Security": {
    "RequireHttps": false,
    "EnableCors": true,
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "http://frontend:80"
    ]
  },
  "Features": {
    "EnableSwagger": true,
    "EnableHealthChecks": true,
    "EnableResponseCompression": true,
    "EnableDetailedErrors": true
  }
}
