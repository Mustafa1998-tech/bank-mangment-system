# Database Configuration
DB_SERVER=your-render-db-host
DB_NAME=bankmanagement
DB_USER=your-db-user
DB_PASSWORD=your-secure-password

# API Configuration
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080

# JWT Configuration
JWT__SecretKey=your-super-secure-jwt-secret-key-here
JWT__Issuer=bank-management-api
JWT__Audience=bank-management-client

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# CORS (update with your frontend URL)
CORS_ORIGINS=https://your-frontend-url.onrender.com

# Logging
LOG_LEVEL=Information
LOG_FILE_PATH=logs/bank-management-.log
