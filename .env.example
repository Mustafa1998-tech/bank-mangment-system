# ==============================================
# Bank Management System - Environment Configuration
# ==============================================

# Database Configuration
DB_SERVER=your-db-host
DB_NAME=bankmanagement
DB_USER=your-db-user
DB_PASSWORD=your-secure-password

# API Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000

# JWT Configuration
JWT__SecretKey=your-super-secure-jwt-secret-key-here
JWT__Issuer=bank-management-api
JWT__Audience=bank-management-client

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# CORS (semicolon-separated for multiple origins)
CORS__AllowedOrigins=http://localhost:3000;https://your-frontend-url.com

# Logging
LOG_LEVEL=Information
LOG_FILE_PATH=logs/bank-management-.log

# Frontend Configuration
VITE_API_URL=http://localhost:5000

# Connection Strings
CONNECTION_STRING=Server=${DB_SERVER};Database=${DB_NAME};User Id=${DB_USER};Password=${DB_PASSWORD};TrustServerCertificate=true;MultipleActiveResultSets=true

# Security Settings
JWT_EXPIRY_HOURS=24

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://frontend:80

# Logging Configuration
LOG_RETENTION_DAYS=30

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@bankmanagement.com
SMTP_FROM_NAME=Bank Management System

# File Upload Settings
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Cache Configuration
REDIS_CONNECTION_STRING=localhost:6379
CACHE_EXPIRY_MINUTES=60

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=1

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/bank-management

# Monitoring & Health Checks
HEALTH_CHECK_TIMEOUT_SECONDS=30
METRICS_ENABLED=true
APPLICATION_INSIGHTS_KEY=your-app-insights-key

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_DETAILED_ERRORS=false
ENABLE_CORS=true
ENABLE_HTTPS_REDIRECT=false

# Bank Business Rules
MAX_DAILY_WITHDRAWAL_LIMIT=50000.00
MAX_DAILY_TRANSFER_LIMIT=100000.00
MINIMUM_ACCOUNT_BALANCE=0.00
DEFAULT_CURRENCY=SAR

# Transaction Fees
WITHDRAWAL_FEE=5.00
TRANSFER_FEE=2.00
INTERNATIONAL_TRANSFER_FEE=25.00

# Account Types
SUPPORTED_ACCOUNT_TYPES=Savings,Checking,Business
DEFAULT_ACCOUNT_TYPE=Savings

# Localization
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar,en
DEFAULT_TIMEZONE=Asia/Riyadh

# External Services
PAYMENT_GATEWAY_URL=https://api.payment-provider.com
PAYMENT_GATEWAY_KEY=your-payment-gateway-key
SMS_PROVIDER_URL=https://api.sms-provider.com
SMS_PROVIDER_KEY=your-sms-provider-key

# Development Settings (Development Only)
SEED_DATABASE=true
USE_IN_MEMORY_DATABASE=false
ENABLE_SENSITIVE_DATA_LOGGING=false

# Docker Compose Override
COMPOSE_PROJECT_NAME=bank-management-system
COMPOSE_FILE=docker-compose.yml

# SSL Configuration (Production)
SSL_CERTIFICATE_PATH=/etc/ssl/certs/bank-management.crt
SSL_CERTIFICATE_KEY_PATH=/etc/ssl/private/bank-management.key

# Nginx Configuration
NGINX_CLIENT_MAX_BODY_SIZE=10m
NGINX_PROXY_READ_TIMEOUT=300s
NGINX_PROXY_CONNECT_TIMEOUT=300s

# ==============================================
# IMPORTANT SECURITY NOTES:
# ==============================================
# 1. Change all default passwords before production deployment
# 2. Use strong, unique passwords for all services
# 3. Keep this file secure and never commit it to version control
# 4. Use environment-specific configuration files
# 5. Regularly rotate secrets and API keys
# ==============================================
